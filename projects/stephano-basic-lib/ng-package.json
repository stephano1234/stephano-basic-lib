{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/stephano-basic-lib",
  "assets": [
    {
      "glob": "*.svg",
      "input": "./src/assets/icons",
      "output": "/assets/icons"
    },
    {
      "glob": "*.scss",
      "input": "./src/styles",
      "output": "/styles"
    },
    {
      "glob": "styles.scss",
      "input": "./src",
      "output": "./"
    }
  ],
  "lib": {
    "entryFile": "src/public-api.ts"
  }
}
